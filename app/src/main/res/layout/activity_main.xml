<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.neoresearch.bookmyspace.MainActivity"
    android:background="@color/colorPrimary">






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ppLinearCard"
        android:padding="20dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/provide_parking"
            android:src="@drawable/pp"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"


            android:minHeight="44dp"
            android:elevation="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Provide Parking"


            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:editable="false" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/colorPrimary"

        android:layout_alignTop="@+id/ppLinearCard"
        android:layout_toRightOf="@+id/ppLinearCard"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"


        android:elevation="5dp"
        android:contextClickable="false">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use_parking"
        android:src="@drawable/pu"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"


        android:elevation="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Use Parking"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"

            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
