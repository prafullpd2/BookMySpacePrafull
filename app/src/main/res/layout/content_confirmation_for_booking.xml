<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_confirmation_for_booking"
    tools:context="com.neoresearch.bookmyspace.ConfirmationForBooking">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="--Name--"
        android:id="@+id/name_confimation"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact"
        android:id="@+id/tvContact"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tvName"
        android:layout_alignRight="@+id/tvAddress"
        android:layout_alignEnd="@+id/tvAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="--contact--"
        android:id="@+id/contact_confirmation"
        android:layout_alignTop="@+id/tvContact"
        android:layout_alignRight="@+id/name_confimation"
        android:layout_alignEnd="@+id/name_confimation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address"
        android:id="@+id/tvAddress"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/tvContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="--Address---"
        android:id="@+id/address_confirmation"
        android:layout_alignBottom="@+id/tvAddress"
        android:layout_alignRight="@+id/contact_confirmation"
        android:layout_alignEnd="@+id/contact_confirmation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Vehicle-ID"
        android:id="@+id/tvVehicleID"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tvAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vehicle_confirmation"
        android:layout_alignTop="@+id/tvVehicleID"
        android:layout_alignLeft="@+id/address_confirmation"
        android:layout_alignStart="@+id/address_confirmation"
        android:layout_alignRight="@+id/address_confirmation"
        android:layout_alignEnd="@+id/address_confirmation"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Time Period(in hours)"
        android:id="@+id/tv_time_period"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/tvVehicleID"
        android:layout_alignRight="@+id/cancel_confirmation"
        android:layout_alignEnd="@+id/cancel_confirmation" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/time_confirmation"
        android:layout_alignTop="@+id/tv_time_period"
        android:layout_alignRight="@+id/vehicle_confirmation"
        android:layout_alignEnd="@+id/vehicle_confirmation"
        android:layout_above="@+id/cancel_confirmation"
        android:layout_alignLeft="@+id/vehicle_confirmation"
        android:layout_alignStart="@+id/vehicle_confirmation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancle"
        android:id="@+id/cancel_confirmation"
        android:layout_below="@+id/tv_time_period"
        android:layout_marginTop="87dp"
        android:layout_alignRight="@+id/tvVehicleID"
        android:layout_alignEnd="@+id/tvVehicleID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:id="@+id/book_confirmation"
        android:layout_alignTop="@+id/cancel_confirmation"
        android:layout_toLeftOf="@+id/name_confimation"
        android:layout_toStartOf="@+id/name_confimation"


        />
</RelativeLayout>
